<%= form_for [@neighborhood, @bar] do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :specialty_drink %>
    <%= f.text_area :specialty_drink %>
  </div>

  <div class="field">
    <%= f.label :cash_only %>
    <%= f.select :cash_only, options_for_select([["true", true], ["false", false]]) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
